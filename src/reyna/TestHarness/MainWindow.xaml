<Window x:Class="TestHarness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        <Button x:Name="startReynaButton" Content="Start Reyna" HorizontalAlignment="Left" Margin="81,69,0,0" VerticalAlignment="Top" Width="75" Click="startReynaButton_Click"/>
        <Label x:Name="reynaStatusLabel" Content="Service Not Started" HorizontalAlignment="Left" Margin="81,28,0,0" VerticalAlignment="Top"/>
        <Button x:Name="stopReynaButton" Content="Stop Reyna" HorizontalAlignment="Left" Margin="81,114,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.658,-0.131" Grid.RowSpan="2" Click="stopReynaButton_Click"/>
        <Button x:Name="sendMessageButton" Content="Send Message" HorizontalAlignment="Left" Margin="81,23,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="sendMessageButton_Click"/>

    </Grid>
</Window>
